---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@reuther-hols/cliniquick-ui";
import { Button } from "@reuther-hols/cliniquick-ui";
import { Card } from "@reuther-hols/cliniquick-ui";

const builtWith = [
  { name: "Cardiology", url: "https:///" },
  { name: "Dermatology", url: "https:/" },
  { name: "ENT", url: "https://do/" },
  { name: "Gastroenterology", url: "https://" },
  { name: "Genetics", url: "https://docs.ast/" },
  { name: "Immunology", url: "https:///" },
  { name: "MSK", url: "https:/" },
  { name: "Nephrology", url: "https://do/" },
  { name: "Neurology", url: "https://" },
  { name: "OBGyn", url: "https://docs.ast/" },
  { name: "Pulmonology", url: "https:///" },
  { name: "Rheumatology", url: "https:/" },
  { name: "Urology", url: "https://do/" },
  { name: "?Oncology/Haematology", url: "https://" },
  { name: "?Paediatrics", url: "https://docs.ast/" },
];
---

<Layout
  title="Home"
  pageTitle="CliniQuick | Home"
  description="CliniQuick... your clinical mentor"
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About CliniQuick</h2>
      <div class="col-span-4">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-1xl md:text-3xl lg:text-6xl">
              CliniQuick is your <a
                class="text-white"
                target="_blank"
                href="httpsmore/">personal mentor</a
              >
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-6xl">
              covering key topics within the fields of:
              <ul class="flex gap-4 flex-wrap">
                {
                  builtWith.map((item) => (
                    <li>
                      <Pill>
                        <a
                          class="sanchez"
                          href={item.url}
                          target="_blank"
                          title={`Go to ${item.name}`}
                        >
                          {item.name}
                        </a>
                      </Pill>
                    </li>
                  ))
                }
              </ul>
            </p>
            <Button target={"_self"} href="/blog/">
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-3xl lg:text-6xl mb-8 dm-serif">
            CliniQuick is built with
          </h2>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-3xl lg:text-6xl mb-4 dm-serif">
            What is CliniQuick?
          </h2>
          <p class="poppins">
            CliniQuick is a rg <a
              href="https://www.s/">LINK</a
            >. It'es.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
