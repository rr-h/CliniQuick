---
// Astro component frontmatter script
import Header from './Header/Header.astro';
// Although Astro does not directly use PropTypes, you can use TypeScript for type checking if necessary.
// Keeping the unused import commented for review as requested.
// import PropTypes from 'prop-types';

// Function to determine site language; this assumes static generation.
// For dynamic language changes, consider client-side scripts.
const getSiteLanguage = (urlPath) => {
  return urlPath.indexOf('/en') !== -1 ? 'en' : 'fi';
};

// Accessing the request URL from Astro global
const siteLanguage = getSiteLanguage(Astro.request.url.pathname);
---

<!-- Global styles -->
<style is:global>
@import "../styles/layout.css";
@import "../styles/index.scss";
@import "../styles/global.scss"
</style>

<!-- Layout Component -->
<div class="main-wrapper">
  <Header lang={siteLanguage} />
  
  <!-- Slot for child components -->
  <slot />
</div>
