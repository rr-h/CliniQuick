---
// Import statements are commented out since Astro handles styles differently and prop-types are not used directly in Astro.
// import PropTypes from 'prop-types';
// React import is not needed because Astro does not use React by default.
// import React from 'react';

// Define your component's props here. Astro components receive `Astro.props`.
interface SubHeaderProps {
  className?: string;
  headingLevel?: string;
  headingFontSize?: string;
  text: string; // text is required
}

const { className = '', headingLevel = 'h2', headingFontSize, text } = Astro.props as SubHeaderProps;

// Custom logic or functions can be defined here.

// Style import, adjusted for Astro. You need to ensure the path is correct based on your project's structure.
const styles = Astro.resolve('../../styles/SubHeader.scss');
---

<!-- Astro component template starts here -->
<!-- You can use the `set:html` directive to dynamically set HTML properties -->
<style is:global>
  @import {styles};
</style>

<${headingLevel} class={`sub-header ${className}`} style={headingFontSize ? `font-size: ${headingFontSize};` : ''}>
  {text}
</${headingLevel}>
