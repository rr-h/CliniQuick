<style>
 @import "../../styles/BodyText.scss";
</style>

// Simplifies class names concatenation using a function
const getClasses = (props) => [
 props.centered ? "centered" : "",
 props.bold ? "bold" : "",
 props.noPadding ? "no-padding" : "",
 props.headingFont ? "heading-font" : "",
].filter(Boolean).join(" ");

<div class={`body-text ${Astro.props.className ?? ""}`}>
 {
  Astro.props.heading?.title && (
   <div class={`body-text__title ${Astro.props.heading.level}`} style={{ fontSize: Astro.props.headingFontSize }}>
    {Astro.props.heading.title}
   </div>
  )
 }
 {
  typeof Astro.props.text === 'string' ? (
   <p class={`body-text__content ${getClasses(Astro.props)}`}>
    {Astro.props.text}
   </p>
  ) : (
   Astro.props.text?.map((text, index) => (
    <div key={index} class={`body-text__content ${getClasses(Astro.props)}`}>
     {text}
    </div>
   ))
  )
 }
</div>