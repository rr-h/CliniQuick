export const CompaniesBanner = ({ isFrontPage, lang }) => (
  <Banner
    backgroundColor={isFrontPage && 'white'}
    class="spacing--after"
    id="challenge"
  >
    <Element class="container" flex>
      <BodyText
        centered
        class="col-4 push-right-3 challenge-title"
        text="In co-operation with"
      />
      <Element
        flex
        spaceBetween
        class="col-6 push-right-2 flex-fix-aligning space-between--mobile"
      >
        {partners.map((company, i) => (
          <ContentLiftup
            key={company.url}
            small
            companyPath={company.url}
            image={{
              src: require(`../../images/company_logos/${company.image.name}`),
              alt: company.image.alt,
            }}
            class={`col-3 col-5--mobile col-5--tablet`}
          />
        ))}
      </Element>

      {!isFrontPage && (
        <>
          <BodyText
            centered
            class="col-4 spacing push-right-3 challenge-title"
            text={
              lang === 'fi'
                ? 'Full stack -haasteessa mukana'
                : 'Taking part to Full stack challenge'
            }
          />
          <Element
            flex
            class="col-9 flex-fix-aligning space-between--mobile"
          >
            {inChallenge.map(company => (
              <Image
                key={company}
                contain
                src={require(`../../images/company_logos/${snakeCase(
                  company
                )}.svg`)}
                alt={company}
                class={`company__logo push-right-1 col-3--mobile col-3--tablet`}
              />
            ))}
          </Element>
        </>
      )}

      {isFrontPage && (
        <Element flex spaceAround class="col-10 spacing">
