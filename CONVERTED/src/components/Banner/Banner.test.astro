// Import necessary testing libraries
import { expect } from 'vitest';
import { render } from '@testing-library/astro';
import '@testing-library/jest-dom';

// Import the Astro component
// Adjust the import path as necessary to point to your Banner.astro component
import Banner from '../components/Banner.astro';

describe('Banner', () => {
  it('Renders', async () => {
    const { findByText } = render(Banner, {
      // Pass props directly as the second argument to `render`
      props: { image: '/test/path', text: ['Test message'] },
    });

    // Use findByText to assert that the text is rendered
    const messageElement = await findByText('Test message');
    expect(messageElement).toBeInTheDocument();
  });
});

