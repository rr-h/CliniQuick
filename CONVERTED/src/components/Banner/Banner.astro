// Import React for using JSX syntax
import React from "react";

// Define the Banner component
// PropType validations are not natively supported in Astro, hence commented out
// import PropTypes from 'prop-types';

export interface BannerProps {
  className?: string;
  backgroundColor?: string;
  [propName: string]: any; // For additional props spread
}

const Banner = ({ className = "", backgroundColor, ...props }: BannerProps) => {
  const background = backgroundColor
    ? { backgroundColor: backgroundColor }
    : null;

  return <div class={`banner ${className}`} style={background} {...props} />;
};

