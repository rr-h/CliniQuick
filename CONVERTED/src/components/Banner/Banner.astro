---
// Import React for using JSX syntax
import React from 'react';

// Define the Banner component
// PropType validations are not natively supported in Astro, hence commented out
// import PropTypes from 'prop-types';

export interface BannerProps {
  className?: string;
  backgroundColor?: string;
  [propName: string]: any; // For additional props spread
}

const Banner = ({ className = '', backgroundColor, ...props }: BannerProps) => {
  const background = backgroundColor
    ? { backgroundColor: backgroundColor }
    : null;

  return (
    <div class={`banner ${className}`} style={background} {...props} />
  );
};

// Default props and PropType validations would be managed outside of the Astro component if necessary
// Banner.defaultProps = {
//   className: '',
// };
//
// Banner.propTypes = {
//   className: PropTypes.string,
// };
---

<!-- Global style import, adjust the path as necessary for your project structure -->
<style global>
@import "../../styles/Banner.scss";
</style>

<!-- Render the Banner component using React-like JSX syntax -->
<Banner client:load />
