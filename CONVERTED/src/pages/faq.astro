---
// Define component props and scripts here
import Accordion from '../components/Accordion/Accordion.astro';
import Element from '../components/Element/Element.astro';
import Footer from '../components/Footer/Footer.astro';
import Layout from '../components/Layout/Layout.astro'; // Adjust the path if necessary
// React is not used in Astro component directly, so we comment it out
// import React from 'react';
import SEO from '../components/SEO/SEO.astro';
import { SubHeader } from '../components/SubHeader/SubHeader.astro';
import content from '../content/faq.json'; // Adjust the path to your faq.json file
import mainSEOtags from '../content/seo/mainSEOtags.json'; // Adjust if necessary, and ensure the file is .json

// Note: In Astro, components are not typically defined with a function or arrow function syntax like in React.
// Instead, the template part directly follows the frontmatter script.
---

<Layout>
  <SEO
    lang="fi"
    title="FAQ | Full Stack Open 2019"
    description="Usein kysytyt kysymykset"
    keywords={[...mainSEOtags, 'faq', 'frequently asked questions', 'ukk', 'usein kysytyt kysymykset']}
  />

  <Element class="container link spacing spacing--after">
    <SubHeader
      class="spacing--after-small"
      headingLevel="h1"
      text="Usein kysytyt kysymykset"
    />

    <!-- Using Astro's syntax for iteration -->
    {content.fi.map((item) => (
      <Accordion
        track
        key={item.title} <!-- key prop is not used in Astro like in React, but kept for reference -->
        title={item.title}
        content={item.text}
      />
    ))}
  </Element>

  <Footer lang="fi" />
</Layout>
